rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Requests collection
    match /requests/{requestId} {
      // Anyone authenticated can read requests
      allow read: if isAuthenticated();
      
      // Anyone authenticated can create a request
      allow create: if isAuthenticated()
        && request.resource.data.createdByUid == request.auth.uid;
      
      // Can update if you're the owner OR if you're claiming/completing it
      allow update: if isAuthenticated() 
        && (isOwner(resource.data.createdByUid) 
            || request.resource.data.claimedByUid == request.auth.uid
            || resource.data.claimedByUid == request.auth.uid);
      
      // Can delete if you're the owner and it's still open
      allow delete: if isAuthenticated() 
        && isOwner(resource.data.createdByUid)
        && resource.data.status == 'open';
    }

    // User profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(userId);
    }

    // Messages collection
    match /messages/{messageId} {
      // Allow reading if you're the sender or receiver
      allow read: if isAuthenticated();
      
      // Allow creating if you're the sender
      allow create: if isAuthenticated()
        && request.resource.data.senderId == request.auth.uid;
    }
  }
}